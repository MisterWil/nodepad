extends ../layout

block header
	h2 Nodepad Login
block content
	form(method='post', action='/user')
		div
			label Username:
			input(name='user[username]')
		div
			label Password:
			input(name='user[password]' type='password')
		div
			input(type='submit', value='Login')
		div
			| No account? 
			a(href='/user/new') Register
			| 